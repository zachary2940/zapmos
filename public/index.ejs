    <body>
        <div class="view-container">
            <div class="header-container">
                <h1 class="title">
                    <span class="one">MOZZIE</span> 
                    <span class="two">ZAPPER</span>
                </h1>
                <p class="description">A design project for RE2012.</p>
            </div>

            <div class="row highlight">
                    <!-- <div class="col-md-12"> -->
                        <h2 class="date-outer">On <span id="date">12 Apr 2019</span>, 
                    <!-- </h4> -->
                    <!-- </div> -->
                    <!-- <div class="col-md-12"> -->
                        <!-- <h2 class="count-outer">
                            Total count:  -->
                        <b>
                            <span id="count">

                            </span>
                        </b>
                        mozzies were zapped.
                    </h4>
                    <!-- </div> -->
                </div>
            <div class="chart-container">

                <canvas id="myChart"></canvas>
            </div>
        </div>

        <script>
            var socket = io.connect('10.27.77.252:4000'); //connect to server
            var ctx = document.getElementById('myChart').getContext('2d');
            var chart = new Chart(ctx, {
                // The type of chart we want to create
                type: 'bar',
                // The data for our dataset
                data: {
                labels: ['9:00','10:00','11:00','12:00','13:00', '14:00','15:00'],
                datasets: [{
                    label: "Count",
                    borderColor: "transparent",
                    data: [20,14,10,4,7,18,30], // for zap data
                    fill: false,
                    // pointStyle: 'circle',
                    backgroundColor: '#d3e3fc',
                    // pointRadius: 5,
                    // pointHoverRadius: 7,
                    // lineTension: 0,
                }]
                },
                // Configuration options go here
                options: {
                    legend: {
                        display: true,
                        labels: {
                            fontColor: '#ffffff',
                            fontFamily: "Lato",
                        }
                    },
                    scales: {
                        xAxes: [{ 
                            gridLines: {
                                display: false,
                            },
                            ticks: {
                            fontColor: "#ffffff", // this here
                            },
                        }],
                        yAxes: [{
                            // display: false,
                            gridLines: {
                                // display: false,
                            },
                            ticks: {
                                fontColor: "#ffffff", // this here
                            },
                        }],
                    }


                }
                
            });
            var ylabel = chart.data.labels
            socket.on('zap', data => { //As a zap data is received 
                document.getElementById('date').innerHTML = data.date; //update the date
                if(ylabel.length != 15) { //If we have less than 15 data points in the graph
                    if(parseInt(data.time.substr(0,2))!= parseInt(ylabel[ylabel.length-1].substr(0,2))){
                        ylabel.push(data.time.substr(0,2)+':00');  //Add time in x-axis
                    }
                    chart.data.datasets[0].data[ylabel.length-1]=data.zap;//Add zap in y-axis                     
                }
                else { //If there are already 15 data points in the graph.
                    chart.data.labels.shift(); //Remove first time data
                    chart.data.labels.push(data.time); //Insert latest time data
                    chart.data.datasets.forEach((dataset) => {
                        dataset.data.shift(); //Remove first zap data
                        dataset.data.push(data.zap); //Insert latest zap data
                    });
                }
                chart.update(); //Update the graph.
                var countArray = chart.data.datasets[0].data;
                var totalCount = countArray.reduce((total, num) => total + num);
                $("#count").html(totalCount);
            });

            var countArray = chart.data.datasets[0].data;
            var totalCount = countArray.reduce((total, num) => total + num);
            $("#count").html(totalCount);
        </script>


